<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head") %>
<body>
    <%- include("../partials/header") %>
    <div class="registro">
        <form class="form-container" action="/users/register" method="POST">
            <p class="titulo-login">CREÁ TU CUENTA:</p>
            <label for="nombre">Nombre:</label> <br>
            <input type="text" name="nombre"  class="formulario-input <%= locals.errors && errors.nombre ? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.nombre :null %>" > <br>
                <% if (locals.errors && errors.nombre) { %>       
            <div class="texto-error">
                <%= errors.nombre.msg %>
            </div>
            <% } %>
            <label for="apellido">Apellido:</label> <br>
            <input type="text" name="apellido"  class="formulario-input <%= locals.errors && errors.apellido ? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.apellido :null %>" > <br>
            <% if (locals.errors && errors.apellido) { %>
                <div class="texto-error">
                    <%= errors.apellido.msg %>
                </div>
                <% } %>
            <label for="email">Email:</label> <br>
            <input type="email" name="email" class="formulario-input <%= locals.errors && errors.email ? 'is-invalid' : null %>"  value="<%= locals.oldData ? oldData.email :null %>" >
           <br>
            <% if (locals.errors && errors.email) { %>       
                <div class="texto-error">
                    <%= errors.email.msg %>
                </div>
                <% } %>
            <label for="password">Contraseña:</label><br>
            <input type="password" name="password" class="formulario-input <%= locals.errors && errors.password ? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.password :null %>" > <br>
            <% if (locals.errors && errors.password) { %>       
                <div class="texto-error">
                    <%= errors.password.msg %>
                </div>
                <% } %>
            <label for="password">Repita la contraseña:</label><br>
            <input type="password" name="confirmPassword"  class="formulario-input <%= locals.errors && errors.confirmPassword ? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.confirmPassword :null %>"> <br>
            <% if (locals.errors && errors.confirmPassword) { %>       
                <div class="texto-error">
                    <%= errors.confirmPassword.msg %>
                </div>
                <% } %>
            <div class="botones">
            <button class="entrar" type="submit">CREAR</button>
            </div>
        </form>
    </div>
    <%- include("../partials/footer") %>     
    </body>
</html>
